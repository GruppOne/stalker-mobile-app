<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="5dp"
  android:orientation="vertical">
  <TextView
    android:id="@+id/tvOrganizationName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Nomeorganizzazione"
    android:textStyle="bold"
    android:textSize="20sp"
    android:textColor="@color/colorAccent"
    />
  <TextView
    android:id="@+id/tvPlaceName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="NomePlace"
    android:textSize="18dp"
    android:textColor="@color/colorAccent"
    />
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

  <TextView
    android:id="@+id/tvPlaceAddress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Indirizzo place"
    android:textSize="15dp"
    android:textColor="@color/colorAccent"
    />
  <TextView
    android:id="@+id/tvPlaceCity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Nomecity"
    android:textSize="15dp"
    android:textColor="@color/colorAccent"
    />
  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/tvInside"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="you entered/ you went out"
      android:layout_marginEnd="@dimen/marginbetweendate"
      android:textSize="15dp"
      android:textColor="@color/colorAccent"
      />
    <TextView
      android:id="@+id/tvTimestampDate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="data"
      android:layout_marginStart="@dimen/marginbetweendate"
      android:layout_marginEnd="@dimen/marginbetweendate"
      android:textSize="15dp"
      android:textColor="@color/colorAccent"
      />
    <TextView
      android:id="@+id/tvTimestampTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="ora"
      android:layout_marginStart="@dimen/marginbetweendate"
      android:textSize="15dp"
      android:layout_marginEnd="@dimen/marginbetweendate"
      android:textColor="@color/colorAccent"
      />
  </LinearLayout>
  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#000000"
    android:layout_marginTop="2dp"/>
</LinearLayout>
