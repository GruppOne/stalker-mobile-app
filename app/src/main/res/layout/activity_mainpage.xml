<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  app:layout_constraintVertical_chainStyle="spread_inside"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".view.MainPageActivity">

  <include layout="@menu/app_bar_layout"/>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/view_container"
    app:layout_constraintTop_toBottomOf="@id/topAppBarPages"
    app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <include layout="@layout/organization_list"/>
  </androidx.constraintlayout.widget.ConstraintLayout>

  <com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/bottom_navigation"
    app:layout_constraintTop_toBottomOf="@id/view_container"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:menu="@menu/bottom_bar_menu"
    app:backgroundTint="?colorSecondary"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
