<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:gravity="center"
  android:backgroundTint="@color/whiteBackground"
  >
  <TextView
    android:id="@+id/organizationName"
    app:layout_constraintBottom_toTopOf="@id/organizationDescription"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="22sp"
    android:textColor="@color/textOnMatCard"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="30dp"
    android:paddingTop="8dp"
    />
  <TextView
    android:id="@+id/organizationDescription"
    app:layout_constraintTop_toBottomOf="@id/organizationName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:textColor="#8c8c8c"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="30dp"
    android:paddingBottom="8dp"
    />
  <TextView
    android:id="@+id/privatePublicIcon"
    app:layout_constraintTop_toTopOf="@id/organizationName"
    app:layout_constraintLeft_toRightOf="@id/organizationName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
